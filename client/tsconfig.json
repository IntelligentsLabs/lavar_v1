{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "baseUrl": ".",
      "paths": {
        "@/*": ["client/src/*"]
      },
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src","src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts","vite-env.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}